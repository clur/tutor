import glob, sys
from collections import Counter as C

files=glob.glob("toydata/*/*.txt")

#print files

# build vocabulary
c=C()
for f in files:
    c+=C(open(f).read().split())
    
print c

word_tokens=sum([len(l) for l in lines])

words={}
for l in lines:
    for w in l:
        if w not in words:
            words[w]=0
        words[w]+=1

for w in words:
    print w+'\t'+str(words[w]/word_tokens)

def check_in(item,list):
    if item in list:
        return 
    else:
        return "0"

for f in files:
    words=open(f).read().split()
    folder=f.split("/")[-2]
    values=[check_in(w,words) for w in c]
    print " ".join([folder]+values) 
